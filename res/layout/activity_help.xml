<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".help"
     android:background="@drawable/android_theme"
 >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="431dp" >
    
    <EditText
        android:id="@+id/help"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Type here" 
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:background="@layout/textlines"/>

    <Button
        android:id="@+id/send"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/help"
        android:layout_centerHorizontal="true"
        android:onClick="submit"
        android:text="Submit" 
        android:background="@drawable/orange"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/text_info_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="0.5"
        android:text="You can help us improve this application by suggesting new business and reporting spammers (by sending us the owner's username and email id with suitable reasons). You can also ask us for any other help."
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</RelativeLayout>
</ScrollView>